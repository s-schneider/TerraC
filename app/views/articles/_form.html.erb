    <%= f.label "Farbe" %>
    <%= f.text_field :article_color %>
  </div>

  <div class="field">
    <%= f.label "Größe" %>
    <%= f.text_field :article_size %>
  </div>

  <div class="field">
    <%= f.label "Beschreibung" %>
    <%= f.text_area :article_description %>
  </div>

  <div class="actions">
    <%= f.submit "Artikel Erstellen" %>
  </div>
