<p id="notice"><%= notice %></p>

<h1>Artikel</h1>

<table>
  <thead>
    <tr>
      <th>Hersteller</th>
      <th>Artikel-Bezeichnung</th>
      <th>Farbe</th>
      <th>Größe</th>
      <th>Beschreibung</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.article_producer %></td>
        <td><%= article.article_name %></td>
        <td><%= article.article_color %></td>
        <td><%= article.article_size %></td>
        <td><%= article.article_description %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuer Artikel', new_article_path %>
