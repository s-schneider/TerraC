<p id="notice"><%= notice %></p>

<%= render 'layouts/links', user: @user %>
<br><br>

<h1>Personendaten</h1>

<p>
  <strong>Name:</strong>
  <%= @customer.customer_name %>
  <%= @customer.customer_surname %>
</p>

<p>
  <strong>Straße:</strong>
  <%= @customer.customer_street %>
</p>

<p>
  <strong>PLZ, Wohnort:</strong>
  <%= @customer.customer_town %>
</p>

<p>
  <strong>Telefon:</strong>
  <%= @customer.customer_phone %>
</p>

<p>
  <strong>Handynummer:</strong>
  <%= @customer.customer_mobile %>
</p>

<p>
  <strong>Fax:</strong>
  <%= @customer.customer_fax %>
</p>


<p>
  <strong>Email:</strong>
  <%= mail_to @customer.customer_email %>
</p>

<p>
  <strong>Verein:</strong>
  <%= @customer.customer_club %>
</p>

<p>
  <strong>Newsletter:</strong>
  <%= @customer.customer_newsletter %>
</p>


<p>
  <strong>Bemerkungen:</strong>
  <%= @customer.customer_notes %>
</p>



<b>
<%= @customer.receipts.count %>
<% if @customer.receipts.count != 1 %>
  </b> Vorgänge für <%= @customer.customer_name + " " + @customer.customer_surname %> |
<% else %>
  </b> Vorgang für <%= @customer.customer_name + " " + @customer.customer_surname %> |
<% end %>
<b>
<%= link_to 'Neuer Vorgang für Person', new_receipt_path(@customer) %> |
<%= link_to 'Personendaten ändern', edit_customer_path(@customer) %> |
</b>
<% if @customer.receipts.count == 0 %>
<%= link_to 'Person Löschen', @customer, method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
<% end %>

<%= render 'receipts/index', receipts: @customer.receipts %>