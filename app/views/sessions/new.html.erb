<div class="text-center">
	<h1>Anmeldung</h1>

	<%= form_tag sessions_path do %>
	<div class="field">
		<%= label_tag "Filial-Login" %><br />
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div class="field">
		<%= label_tag "Passwort" %><br />
		<%= password_field_tag :password %>
	</div>
	<div class="actions"><%= submit_tag "Einloggen" %></div>
	<% end %>
</div>